/* pages/component/nav/nav.wxss */
@import "../../../style/main.wxss";
@import "/style/animated.wxss";
.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
  height:calc(100vh - 130rpx);
  overflow: hidden;
  animation: fadeIn .9s;
}
.VerticalMain{
  background-color: #f1f1f1;
  padding-bottom: 120rpx;
}
.servic_top {

  padding-top: 14px;
  background: linear-gradient(to top, #1D4259, #3963BC);


  display: flex;
  color: #Fff;
  padding: 15px 15px;
  padding-top: 10px;
  border-radius: 0px 0px 10px 10px;
  justify-content: space-between;
}

.servic_top_Img {
  width: 100px;
  height: 35px;
}

.servic_top_Wz1 {
  font-size: 16px;
  margin-bottom: 5px;

}
