/* miniprogram/pages/detection/index.wxss */
.detection-main {
  background: rgba(255, 255, 255, 1);
  border-radius: 6px;

}

.main {
  padding-top: 1px;
  
}


.bascs-left {
  position: relative;

  height: 140px;
}

.loding {
  margin-top: 20px;
  text-align: center;
  line-height: 30px;
  color: #909399
}

.bascs-left>view:nth-child(1) {
  width: 100%;
  height: 140px;
  border-radius: 3px;
  position: absolute;
}

.bascs-left>view:nth-child(2) {
  width: 100%;
  height: 26px;
  text-align: left;
  background: rgba(255, 255, 255, 0.8);
  padding: 3px;
  padding-left: 6px;
  font-size: 13px;
  font-family: PingFang;
  color: rgba(51, 51, 51, 1);
  position: absolute;
  bottom: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;

}

.home-jfg button {
  width: 100%;
  height: auto;
  background: #fff;
  margin: 0px;
  display: inline;
  position: initial;
  padding: 0px;
  color: rgb(246 150 4);
  margin-top: -5px;
  line-height: initial;
  font-weight: initial;
  height: 63px;
}

.bascs-right {}

.bascs-bottom>view:nth-child(1) {
  background: rgba(255, 255, 255, 1);
  color: rgba(153, 153, 153, 1);
  text-align: center;
  margin: 6px;
  margin-left: 0px;
  margin-top: 1px;
  padding-top: 2.5px;
  font-family: PingFang;
}

.bascs {
  padding-bottom: 12px;
  position: relative;
  background-color: #fff;
  margin: 10px;
  border-radius: 4px;
  overflow: hidden;
}

.home-jcly {
  margin: 10px;
  padding: 10px;
  border-radius: 6px;
}

.dis {
  display: flex;
}

.bascs-type {
  position: absolute;
  padding: 2px 10px;
  top: 0px;
  font-size: 12px;
  left: 0px;
  color: #fff;
  background-color: rgb(246 150 4);
  border-bottom-right-radius: 12px;
}

.bascs-type2 {
  position: absolute;
  padding: 2px 10px;
  bottom: 0px;
  font-size: 12px;
  right: 0px;
  color: #fff;
  background-color: rgb(246 150 4);
  border-top-left-radius: 12px;
}

.icon_wz {
  padding-left: 5px;
  padding-right: 15px;
  font-size: 24rpx;
}

.dis>view {
  display: flex;
}

.home-jfg>view:nth-child(1) {
  height: 111px;
  overflow: hidden;
}

.bascs-dlimg>view:nth-child(1) {
  font-size: 30rpx;
  color: #2e3135;
  padding: 10px 0px 0px 10px;
  padding-bottom: 4px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.bascs-bottom {
  display: flex;
  bottom: 0px;
  position: absolute;
  padding-left: 10px;
  justify-content: space-between;
}

.home-view2 {
  padding: 2px 15px;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgb(246 150 4);
  border-radius: 12px;
  color: rgb(246 150 4);
  text-align: center;
  font-size: 12px;
}

.bascs-dlimg_mc {
  margin-top: 3px;
  font-size: 13px;
  overflow: hidden;
  margin-bottom: 20px;
  padding: 0px 10px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 20px
}

.bascs-right_mc {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-family: PingFang;
  font-weight: 400;
  padding: 0px 10px;
  color: rgba(102, 102, 102, 1);
  line-height: 20px;
  margin-bottom: 20px;
}