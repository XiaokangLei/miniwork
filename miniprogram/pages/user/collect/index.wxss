/* miniprogram/pages/detection/index.wxss */

.home-list-left {
  position: relative;
  width: 124px;
  height: 70px;
}

.home-list-left>view:nth-child(1) {
  width: 124px;
  height: 70px;
  border-radius: 3px;
  position: absolute;
}

.home-list-left>view:nth-child(2) {
  width: 124px;
  height: 26px;
  text-align: center;
  background: rgba(255, 255, 255, 0.8);
  padding: 3px;
  padding-left: 6px;
  font-size: 13px;
  font-family: PingFang;
  color: rgba(51, 51, 51, 1);
  position: absolute;
  bottom: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.loding {
  margin-top: 20px;
  text-align: center;
  line-height: 30px;
  color: #909399
}

.home-list-right {
  width: calc(100% - 134px);
}

.home-list-bottom {
  display: flex;
  bottom: 0px;
  position: absolute;
  justify-content: space-between;
}

.home-list-bottom>view:nth-child(1) {
  background: rgba(255, 255, 255, 1);
  color: rgba(153, 153, 153, 1);
  text-align: center;
  margin: 6px;
  margin-left: 0px;
  margin-top: 1px;
  padding-top: 2.5px;
  font-family: PingFang;
}

.home-list {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
  padding-bottom: 12px;
  position: relative;
  border-bottom: 1px solid #EBEEF5;
  background-color: #fff;
}

.home-jcly {
  margin: 10px;
  padding: 10px;
  background: #fff;
  border-radius: 6px;
}

.dis {
  display: flex;
}

.dis>view {
  display: flex;
}

.home-list-type {
  position: absolute;
  padding: 2px 10px;
  top: 0px;
  font-size: 12px;
  left: 0px;
  color: #fff;
  background: linear-gradient(to top left, #f7ce9e, #d69c63);
  border-bottom-right-radius: 12px;
}

.home-list-type2 {
  position: absolute;
  padding: 2px 10px;
  bottom: 0px;
  font-size: 12px;
  right: 0px;
  color: #fff;
  background: linear-gradient(to top left, #f7ce9e, #d69c63);
  border-top-left-radius: 12px;
}

.icon_wz {
  padding-left: 5px;
  padding-right: 15px;
  font-size: 24rpx;
}

.home-list-dlimg>view:nth-child(1) {
  font-size: 30rpx;
  color: #2e3135;
  padding-bottom: 4px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.home-list-right_tille {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 20px;
}

.home-list-dlimg_mc {
  margin-top: 3px;
  font-size: 13px;
  overflow: hidden;
  margin-bottom: 20px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 20px
}